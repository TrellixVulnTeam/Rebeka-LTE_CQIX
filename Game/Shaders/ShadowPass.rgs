#version 400


layout(triangles) in;
layout(triangle_strip, max_vertices = 18) out;

out vec3 GSPos;


uniform mat4 cm_mat[6];
uniform mat4 PProj;





void main(void) {
for(int face = 0; face < 6; face++)
{
gl_Layer = face;

for(int tri = 0; tri < 3; tri++)
{
GSPos = gl_in[tri].gl_Position.xyz;
gl_Position = PProj * cm_mat[face] * gl_in[tri].gl_Position;
EmitVertex();
}
EndPrimitive();
}
}
